{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@bridged.xyz/client-sdk": ["../packages/client-sdk-ts"]
    },
    "typeRoots": [
      "./node_modeuls/@types",
      "../node_modeuls/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}